.page {
  margin-left: 0rpx;
  margin-right: 0rpx;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
  width: 1200rpx;
  flex-shrink: 0;
  background-color: #dfdfdf;
}

.tab-item {
  width: 120rpx;
  text-align: center;
  flex-shrink: 0;
  font-size: 30rpx;
  color: #777;
}

.swiper {
  height: 2620rpx;
  /* background: white; */
}

.on {
  color: black;
  font-size: 35rpx;
  background: white;
  font-weight: bold;
  border-top: 5rpx solid #dfdfdf;
}

.news-container {
  margin-top: 160 rpx;
  width: 710rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
  /* background-color: #DDF0ED; */
  display: flex;
  flex-direction: column;
}

.news-item {
  position: relative;
  width: 710rpx;
  height: 230rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 0rpx;
  padding-right: 0rpx;
  /* background-color: blue;  */
  flex-shrink: 0;
  align-items: center;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.news-content {
  width: 490rpx;
  height: 200rpx;
  /* background-color: green;   */
  display: flex;
  flex-direction: column;
}

.news-title {
  font-size: 40rpx;
  line-height: 53rpx;
  font-weight: 500;
}

.news-source {
  /* 放右下角由于有的新闻标题有4行-_- */
  position: absolute;
  bottom: 20rpx;
  right:235rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
}

.news-img {
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: #dfdfdf;
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
}
